<div class="container ">
    <div class="row mx-auto d-flex align-items-center min-vh-100">
        <div class="col-md-6 col-md-offset-3 mx-auto" id="log-sign">
            <br>
            <h2>Welcome back to Horoscope</h2>
            <form action="/login" method="POST" class="login-form">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <br>
                <button type="submit" class="btn btn-light">Login</button>
              </form>
            <br />
            <p>First time here? Click <a href="register">here</a> to register!</p>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/login.js"></script>



















