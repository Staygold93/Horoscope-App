<div class="container ">

    <div class="row d-flex align-items-center min-vh-100">
        <div class="col-md-6 col-md-offset-3 mx-auto" id="log-sign">
            <br>
            <h2 style="color:rgb(254, 31, 31)">Welcome to Horoscope</h2>
            <form action="/auth/register" method="POST">
                <div class="form-group">
                    <label style="color:rgb(254, 31, 31)" for="name"> Name</label>
                    <input style="color:rgb(254, 31, 31); background-color: transparent;"" type="text" class="form-control" id="name" name="name"placeholder="john Doe">
                </div>
               
                <div class="form-group">
                    <label style="color:rgb(254, 31, 31)" for="email">Email address</label>
                    <input style="color:rgb(254, 31, 31); background-color: transparent;" type="email" class="form-control" name="email" id="email" placeholder="johndoe@doglover.com">
                </div>

                <div class="form-group">
                    <label style="color:rgb(254, 31, 31)" for="password">Password</label>
                    <input style="color:rgb(254, 31, 31); background-color: transparent;" type="password" class="form-control" id="password" name="password" placeholder="password">
                </div>

                <div class="form-group">
                    <label style="color:rgb(254, 31, 31)" for="birthday">Birthday</label>
                    <input style="color:rgb(254, 31, 31); background-color: transparent;" type="text" class="form-control" id="birthday" name="birthday" placeholder="Birth-Day">
                </div>

                {{!-- <div class="form-group">
                    <label for="passwordConfirm">Confirm Password</label>
                    <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" placeholder=" Confirm password">
                </div> --}}

                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg"></span>
                </div>
                <br>
                <button style="color:rgb(254, 31, 31); background-color: transparent;" type="submit" class="btn btn-light">Sign Up</button>
            </form>
            {{#if message }}
              <h4 class="alert alert-danger mt-4">{{message}}</h4>
            {{/if}}
            <br />
            <p style="color:rgb(254, 31, 31)">Already have an account? Click <a href="/">here</a> to login!</p>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/signup.js"></script>
